{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "module": "commonjs",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2018"],
    "target": "es2018"
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "types/**/*.ts"]
}
